<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="185dp"
    android:layout_margin="23dp"
    android:clickable="false"
    android:elevation="8dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="155dp"
            android:layout_height="152dp"
            android:layout_marginStart="215dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="13dp"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.772"
            app:shapeAppearanceOverlay="@style/RoundedImageShape"
            app:srcCompat="@drawable/resa" />

        <TextView
            android:id="@+id/valdResaTitel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Resans Titel"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorOnPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/startplats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Från: Start"
            android:textSize="14sp"
            android:textColor="@color/colorOnPrimary"
            app:layout_constraintTop_toBottomOf="@id/valdResaTitel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView" />

        <TextView
            android:id="@+id/slutplats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Till: Slut"
            android:textSize="14sp"
            android:textColor="@color/colorOnPrimary"
            app:layout_constraintTop_toBottomOf="@id/startplats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView" />

        <TextView
            android:id="@+id/tid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tid: 08.30"
            android:textSize="14sp"
            android:textColor="@color/colorOnPrimary"
            app:layout_constraintTop_toBottomOf="@id/slutplats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView" />

        <Button
            android:id="@+id/btnSelectTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="121dp"
            android:layout_marginEnd="236dp"
            android:layout_marginBottom="15dp"
            android:text="Välj Resa"
            android:textColor="@color/colorOnPrimary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.625" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
